{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "target": "es6",
    "isolatedModules": true,
    "module": "esnext",
    "jsx": "react",
    "baseUrl": "./",
    // 搭配path进行使用
    "sourceMap": false,
    "allowJs": false,
    "noImplicitUseStrict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node",
      "node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "src/**/*",
    "typings/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ],
}